  <body>
    <% if (loggedIn) { %>
      Logged in as <a href="<%=`/users/${currentUser._id}`%>">
      <%= currentUser.fullName %></a>
      <a href="/users/logout">Log out</a>
      <%} else {%>
      <a class="login" href="/users/login">Log In</a>
      <% } %>

    <%-include('partials/navigation') %>
    <div class="flashes fit-height">
      <% if (flashMessages.success) { %>
        <div class="alert alert-success fit-height"><%= flashMessages.success %></div>
      <% } else if (flashMessages.error) { %>
        <div class="alert alert-error fit-height"><%= flashMessages.error %></div>
      <% } %>
    </div>
    <%- body %>
  </body>
